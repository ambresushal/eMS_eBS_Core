<style type="text/css">
    .radio-inline {
        padding-top: 0px !important;
    }

    .new-serach-withIcon .input-group {
        width: 100%;
    }

        .new-serach-withIcon .input-group input {
            border-radius: 4px;
        }

    .new-serach-withIcon .input-group-append {
        position: absolute;
        top: 0;
        right: 0;
    }

        .new-serach-withIcon .input-group-append .btn {
            padding: 2px 6px !important;
            border-radius: 0px 4px 4px 0px !important;
        }
</style>
<div class="row">
    <div class="col-xs-3 col-md-3 col-lg-3 col-sm-3" style="border-right:1px solid #aeaeae;">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-4" for="Rule Type">Rule Type:<em>*</em></label>
                <div class="col-sm-8">
                    <select class="select form-control" id="drpRuleType" name="drpRuleType">
                        <option value="0">--Select--</option>
                        <option value="1">Enabled</option>
                        <option value="2">Run Validation</option>
                        <option value="3">Value</option>
                        <option value="4">Visible</option>
                        <option value="5">Is Required</option>
                        <option value="6">Error</option>
                        <option value="8">Highlight</option>
                        <option value="9">Dialog</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">Rule Name:<em>*</em></label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="txtRuleName" placeholder="Rule Name">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">On Success:</label>
                <div class="col-sm-8 new-serach-withIcon">
                    <div class="input-group">
                        <input type="text" class="form-control" id="txtExpTrue" disabled="disabled" placeholder="On Result Success">
                        <div class="input-group-append">
                            <button class="btn btn-secondary" id="btnSearchSuccess" type="button">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group" style="display:none;">
                <label class="control-label col-sm-4">Success Value:</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="txtExpTrueValue" disabled="disabled" placeholder="On Result Success">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">On Failure:</label>
                <div class="col-sm-8 new-serach-withIcon">
                    <div class="input-group">
                        <input type="text" class="form-control" id="txtExpFalse" disabled="disabled" placeholder="On Result False">
                        <div class="input-group-append">
                            <button class="btn btn-secondary" id="btnSearchFailure" type="button">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group" style="display:none;">
                <label class="control-label col-sm-4">Failure Value:</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="txtExpFalseValue" disabled="disabled" placeholder="On Result Success">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">Message:</label>
                <div class="col-sm-8">
                    <textarea class="form-control" cols="20" id="txtValMessage" name="txtValMessage" disabled="disabled" placeholder="Error Message" rows="4"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-4" style="padding-right:0px;">
                    <div class="checkbox">
                        <label><input type="checkbox" id="chkRunOnLoad"> Run On Load</label>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="checkbox">
                        <label><input type="checkbox" id="chkIsStandard"> Is Standard</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-9 col-md-9 col-lg-9 col-sm-9">
        <div id='expressionbuilder' style="width:100%;height:280px;overflow:auto;"></div>
    </div>
</div>
<div style="clear: both"></div>
